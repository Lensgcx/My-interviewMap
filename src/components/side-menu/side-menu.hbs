<ul class="nav sidebar-nav">
    {{! ============ sidebar-header ============ }}
    <div class="sidebar-header">
        <div class="sidebar-title">My interviewMap</div>
        <div class="user-pic">
            <img class="img-responsive img-rounded" src="{{userInfo.Avatar}}" alt="">
        </div>
        <div class="user-info">
            <span class="user-name">Jhon <strong>Smith</strong></span>
            <span class="user-role">Administrator</span>
            <div class="user-status">
                <a href="#"><span class="label label-success">Online</span></a>
            </div>
        </div>
    </div>
    {{! ============ sidebar-search ============ }}
    <div class="sidebar-search">
        <div>
            <div class="input-group">
                <input type="text" class="form-control search-menu" placeholder="Search for...">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </div>
            </div>
        </div>
    </div>
    <!--<li class="sidebar-brand"><a href="#">My-interviewMap</a></li>-->
    {{#each menuData as |item firstIndex|}}
    {{! ============ first each loop ============ }}
        {{#if children}}
            <li class="side-menu-item dropdown">
                <a href="javescript:void(0)" class="dropdown-toggle" data-toggle="dropdown" firstIndex="{{firstIndex}}">
                    <span class="glyphicon {{icon}}" aria-hidden="true"></span>
                    {{name}}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header">{{describe}}</li>
                    {{#each children}}
                    {{! ============ second each loop ============ }}
                        <li class="side-menu-item">
                            <a class="side-menu-link" data-href="{{path}}" name="{{name}}">
                                {{name}}
                            </a>
                        </li>
                    {{/each}}
                </ul>
            </li>
        {{else}}
            <li class="side-menu-item">
                <a class="side-menu-link" data-href="{{path}}" name="{{name}}" firstIndex="{{firstIndex}}">
                    <span class="glyphicon {{icon}}" aria-hidden="true"></span>
                    {{name}}
                </a>
            </li>
        {{/if}}
    {{/each}}
</ul>

